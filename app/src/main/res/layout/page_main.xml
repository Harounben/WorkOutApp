<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF323232">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#9C9C9C"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF323232">

            <Button
                android:id="@+id/mondayButton"
                android:layout_width="308dp"
                android:layout_height="91dp"
                android:layout_marginTop="65dp"
                android:onClick="clickMondayButton"
                android:text="Monday"
                android:textColor="#3A3A3A"
                app:backgroundTint="#D1C4E9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/thursdayButton"
                android:layout_width="309dp"
                android:layout_height="91dp"
                android:layout_marginTop="16dp"
                android:onClick="clickThursdayButton"
                android:text="Thursday"
                android:textColor="#3A3A3A"
                app:backgroundTint="#B3E5FC"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wednesdayButton" />

            <Button
                android:id="@+id/saturdayButton"
                android:layout_width="309dp"
                android:layout_height="91dp"
                android:layout_marginTop="16dp"
                android:text="Saturday"
                android:textColor="#3A3A3A"
                app:backgroundTint="#B2DFDB"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fridayButton" />

            <Button
                android:id="@+id/tuesdayButton"
                android:layout_width="309dp"
                android:layout_height="91dp"
                android:layout_marginTop="16dp"
                android:onClick="clickTuesdayButton"
                android:text="TUESDAY"
                android:textColor="#3A3A3A"
                app:backgroundTint="#C5CAE9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mondayButton" />

            <Button
                android:id="@+id/sundayButton"
                android:layout_width="309dp"
                android:layout_height="91dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Sunday"
                android:textColor="#3A3A3A"
                app:backgroundTint="#C8E6C9"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/saturdayButton" />

            <Button
                android:id="@+id/wednesdayButton"
                android:layout_width="309dp"
                android:layout_height="91dp"
                android:layout_marginTop="16dp"
                android:onClick="clickWednesdayButton"
                android:text="Wednesday"
                android:textColor="#3A3A3A"
                app:backgroundTint="#BBDEFB"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tuesdayButton" />

            <Button
                android:id="@+id/fridayButton"
                android:layout_width="309dp"
                android:layout_height="91dp"
                android:layout_marginTop="16dp"
                android:onClick="clickFridayButton"
                android:text="Friday"
                android:textColor="#3A3A3A"
                app:backgroundTint="#B2EBF2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/thursdayButton" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:text="                  "
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:autoText="false"
        android:background="#000000"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:text="WORKOUT"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>